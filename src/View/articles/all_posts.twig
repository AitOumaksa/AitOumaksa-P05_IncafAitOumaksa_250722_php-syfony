  <div class="row g-0 justify-content-center">
    <div class="col-md-6">
      <div class="row g-0 border rounded overflow-hidden flex-md-row mb-4 shadow-sm h-md-250 position-relative">
        <div class="col p-4 d-flex flex-column position-static">
          <h3 class="mb-0">{{post.title}}</h3>
          {% if post.updatePublication <= post.datePublication %}
          <div class="mb-1 text-muted">Créé le {{ post.datePublication|date('d/m/Y \\à H:i') }} par <strong>{{ post.autor }}</strong></div>
          {% else %}
          <div class="mb-1 text-muted">Mis à jour le {{ post.updatePublication|date('d/m/Y \\à H:i') }} par <strong>{{ post.autor }}</strong></div>
          {% endif %}
          <p class="card-text mb-auto">{{post.chapo}}</p>
          <a href="/post/{{post.id}}" class="stretched-link">Lire la suite</a>
        </div>
